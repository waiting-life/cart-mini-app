<!-- 收货地址 -->
<view class="revice_address_row">
  <view class="user_info_row">
    <view class="user_info">
      <view>{{address.userName}}</view>
      <view>{{address.all}}</view>
    </view>
    <view class="user_phone">{{address.telNumber}}</view>
  </view>
</view>
<!-- 购物车内容 -->
<view class="pay_content">
  <view class="pay_title">购物车</view>
  <view class="pay_main">
    <view class="pay_item" wx:for="{{cart}}" wx:key="goods_id">
      <navigator class="pay_img_wrap">
        <image mode="widthFix" src="{{item.goods_small_logo}}"></image>
      </navigator>
      <view class="pay_info_wrap">
        <view class="goods_name">{{item.goods_name}}</view>
        <view class="goods_price_wrap">
          <view class="goods_price">￥{{item.goods_price}}</view>
          <view class="pay_num_tool">
            <view class="goods_num">X {{item.num}}</view>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>
<!-- 底部工具栏 -->
<view class="footer_tool">
  <!-- 全选 -->
  <!-- 总价格 -->
  <view class="total_price_wrap">
    <view class="total_price">
      合计：
      <text class="total_price_text">￥{{totalPrice}}</text>
    </view>
    <view>包含运费</view>
  </view>
  <!-- 结算 -->
  <view class="pay_wrap" bindtap="handleOrderPay">支付({{totalNum}})</view>
</view>