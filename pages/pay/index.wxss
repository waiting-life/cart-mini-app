page {
  padding-bottom: 90rpx;
}
.revice_address_row .user_info_row {
  display: flex;
  padding: 20rpx;
}
.revice_address_row .user_info_row .user_info {
  flex: 5;
}
.revice_address_row .user_info_row .user_phone {
  flex: 3;
  text-align: right;
}
.pay_content .pay_title {
  padding: 20rpx;
  font-size: 36rpx;
  border-bottom: 1rpx solid var(--themeColor);
  border-top: 1rpx solid var(--themeColor);
}
.pay_content .pay_main .pay_item {
  display: flex;
  padding: 10rpx;
  border-bottom: 1rpx solid #ccc;
}
.pay_content .pay_main .pay_item .pay_img_wrap {
  flex: 2;
}
.pay_content .pay_main .pay_item .pay_img_wrap image {
  width: 100%;
  height: 100%;
}
.pay_content .pay_main .pay_item .pay_info_wrap {
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.pay_content .pay_main .pay_item .pay_info_wrap .goods_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #666;
}
.pay_content .pay_main .pay_item .pay_info_wrap .goods_price_wrap {
  display: flex;
  justify-content: space-between;
}
.pay_content .pay_main .pay_item .pay_info_wrap .goods_price_wrap .goods_price {
  font-size: 34rpx;
  color: var(--themeColor);
}
.pay_content .pay_main .pay_item .pay_info_wrap .goods_price_wrap .pay_num_tool {
  display: flex;
}
.pay_content .pay_main .pay_item .pay_info_wrap .goods_price_wrap .pay_num_tool .goods_num {
  width: 55rpx;
  height: 55rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.footer_tool {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 90rpx;
  display: flex;
  background-color: #fff;
  border-top: 1rpx solid #ccc;
}
.footer_tool .total_price_wrap {
  flex: 5;
  text-align: right;
  padding-right: 20rpx;
}
.footer_tool .total_price_wrap .total_price .total_price_text {
  color: var(--themeColor);
  font-size: 36rpx;
  font-weight: 600;
}
.footer_tool .pay_wrap {
  flex: 3;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: 600;
  color: #fff;
  background-color: var(--themeColor);
}
